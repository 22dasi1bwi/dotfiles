[user]
	name = Silvio D'Alessandro
	email = silvio.dalessandro@novatec-gmbh.de
[core]
	editor = vim
[merge]
        tool = mymeld
	conflictstyle = diff3	
	keepBackup=false
[alias]
	lg = log --color --graph --pretty=format:'%C(bold magenta)%h%Creset-%C(bold yellow)%d%Creset%s%C(bold green)(%cr)%C(bold white)<%an>%Creset' --abbrev-commit
	lga = log --branches --remotes --tags --color --graph --pretty=format:'%C(bold magenta)%h%Creset-%C(bold yellow)%d%Creset%s%C(bold green)(%cr)%C(bold white)<%an>%Creset' --abbrev-commit
	co = checkout
	ci = commit
	br = branch
	st = status
	rb = rebase
	rbm = rebase origin/master
	pu = push
	aa = add .
	fe = fetch
	feo = fetch origin
	re = reset
	cob = checkout -b 
	cp = cherry-pick
	dist = diff --staged
	p = pull 
	pmr = !sh -c 'git pull $1 refs/merge-requests/$2/head' -
	cmr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
	clf = clean -f
	rl = ref log
	com = checkout master
	clean-merged = !git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d
	uc = reset --soft HEAD~1
	ac = !git add . && git commit -am

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true
	ui = true

[mergetool "mymeld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED
